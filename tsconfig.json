{
    "compilerOptions": {
      "noEmit": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "jsx": "preserve",
      "jsxImportSource": "vue",
      "noImplicitThis": true,
      "strict": true,
      "verbatimModuleSyntax": true,
      "target": "ESNext",
      "useDefineForClassFields": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions": true,
      "paths": {
        "@scripts/*": ["./resources/js/*"],
        "@pages/*": ["./resources/js/Pages/vue/*"],
        "@components/*": ["./resources/js/Pages/vue/components/*"],
        "@modals/*": ["./resources/js/Pages/vue/components/modals/*"],
        "@shops/*": ["./resources/js/Pages/vue/components/modals/shops/*"],
        "@alerts/*": ["./resources/js/Pages/vue/components/alerts/*"]
      }
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue",
        "resources/**/*.js"
    ]
  }
